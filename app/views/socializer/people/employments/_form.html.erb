<%= simple_form_for(employment) do |f| %>
  <%= f.input :employer_name, input_html: { autofocus: true } %>
  <%= f.input :job_title %>
  <%= f.input :started_on %>
  <%= f.input :ended_on %>
  <%= f.input :current %>
  <%= f.input :job_description %>

  <%= f.button :submit, class: "btn-primary action-button" %>
<% end %>
