<%= form_for(person_contribution) do |form| %>
<p class="field-title"><%= form.label :label %></p>               <p class="field-value"><%= form.text_field :label %></p>
<p class="field-title"><%= form.label :url %></p>                 <p class="field-value"><%= form.text_field :url %></p>
<p class="field-title"><%= form.label :current %></p>             <p class="field-value"><%= form.check_box :current %></p>

<p class="field-title"></p>                                       <p class="field-value"><%= form.submit t('.submit'), class: "action-button" %></p>
<% end %>
