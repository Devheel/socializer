<% content_for :toolbar do %>
  <%= render 'toolbar' %>
<% end %>

<h1><%= t('.header', count: current_user.contact_of.size) %></h1>

<ul class="large-contact-list">
<% current_user.contact_of.each do |contact| %>
<li class="draggable"><%= link_to image_tag(contact.avatar_url, width: 40, height: 40, title: contact.display_name), stream_path(provider: :people, id: contact.id), class: "draggable", data: { object_id: contact.guid } %>
<% end %>
</ul>
<%= render 'circles' %>
