<%= render 'menu' %>
<%= form_for(@group) do |form| %>
<p class="field-title"><%= form.label :name %></p>                <p class="field-value"><%= form.text_field :name %></p>
<p class="field-title"><%= form.label :privacy_level %></p>       <p class="field-value"><label><%= form.radio_button "privacy_level", "PUBLIC" %> Public</label></p>
<p class="field-title"></p>                                       <p class="field-value"><label><%= form.radio_button "privacy_level", "RESTRICTED" %> Restricted</label></p>
<p class="field-title"></p>                                       <p class="field-value"><label><%= form.radio_button "privacy_level", "PRIVATE" %> Private</label></p>
<p class="field-title"></p>                                       <p class="field-value"><%= form.submit "Save changes", :class => "action-button" %></p>
<% end %>