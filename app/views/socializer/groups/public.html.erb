<% content_for :toolbar do %>
  <%= render 'toolbar' %>
<% end %>

<h1><%= t('.header', count: Socializer::Group.public.count) %></h1>

<div class='row'>
  <%= render partial: 'card', collection: @groups, as: :group %>
</div><!-- /.row -->

<ul class="large-group-list">
<% @groups.each do |group| %>
  <li>
    <div class="group-card <%= group.privacy %>">
      <%= link_to group do %>
        <div class="group-info">
          <span class="group-name"><%= group.display_name %></span>
          <span class="group-member-count"><%= group.members.count %> members</span>
          <span class="group-privacy-level"><%= group.privacy %></span>
        </div>
      <% end %>
    </div>
  </li>
<% end %>
</ul>
