<% content_for :toolbar do %>
  <%= render 'toolbar' %>
<% end %>

<h1><%= t('.header', count: @ownerships.count) %></h1>

<div class='row'>
  <%= render partial: 'card', collection: @ownerships, as: :group %>
</div><!-- /.row -->

<ul class="large-group-list">
<% @ownerships.each do |group| %>
  <li>
    <div class="group-card <%= group.privacy %>">
      <%= link_to group do %>
        <div class="group-info">
          <span class="group-name"><%= group.display_name %></span>
          <span class="group-member-count"><%= group.members.count %> members</span>
          <span class="group-privacy-level"><%= group.privacy %></span>
        </div>
      <% end %>
      <div class="group-actions">
        <%= link_to t('.edit'), edit_group_path(group) %> |
        <%= link_to t('.delete'), group, method: :delete %>
      </div>
    </div>
  </li>
<% end %>
</ul>
