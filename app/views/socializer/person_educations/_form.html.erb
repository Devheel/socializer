<%= simple_form_for(person_education) do |f| %>
  <%= content_tag(:div, class: 'form-inputs') do %>
    <%= f.input :school_name, input_html: { autofocus: true } %>
    <%= f.input :major_or_field_of_study %>
    <%= f.input :started_on %>
    <%= f.input :end %>
    <%= f.input :current %>
    <%= f.input :courses_description %>
  <% end %>

  <%= content_tag(:div, class: 'form-actions') do %>
    <%= f.button :submit, t('.submit'), class: 'action-button' %>
  <% end %>
<% end %>
