<% if activity.activitable_object.note? %>

  <div class="activity-content"><%= activity.object.content %></div>

<% elsif activity.activitable_object.comment? %>

  <div class="activity-content"><%= link_to activity.actor.display_name, stream_path(provider: :people, id: activity.actor.id) %><span class='separator'></span><%= activity.object.content %></div>

<% elsif activity.activitable_object.activity? %>

  <div class="activity-content"><%= activity.activity_field.content %></div>
  <div class="activity-subcontent"><%= link_to activity.object.actor.display_name, stream_path(provider: :people, id: activity.object.actor.id) %> originally shared this <%= link_to(activity.object.object.class.name.demodulize.downcase, stream_path(provider: :activities, id: activity.object.id)) %>:</div>
  <div class="activity-subcontent"><%=  activity.object.object.content %></div>

<% else %>

  <div class="activity-content"><%= activity.activitable_object.activitable_type %></div>

<% end %>
