<% if activity.activitable_object.note? %>
  <p><%= activity.model.object.content %></p>

<% elsif activity.activitable_object.activity? %>

  <p><%= activity.activity_field_content %></p>

  <article  class="media media-body-attachment">
    <section class="media-body">
      <header>
        <h2>
          <%= link_to(activity.model.object.actor.display_name, person_activities_path(person_id: activity.model.object.actor.id)) %>
          <small class="text-muted">
            <%= link_to("originally shared:", activity_activities_path(activity_id: activity.model.object.id)) %>
          </small>
        </h2>
      </header>

      <p><%= activity.model.object.object.content %></p>

    </section>
  </article>

<% else %>

  <p>
    <%= activity.activitable_object.activitable_type %>
  </p>

<% end %>
